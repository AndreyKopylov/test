.header
	height 114px
	background #000
	padding 30px 0

	@media screen and (max-width: 960px)
		height 70px

	&__logo
		float left
		sprite $logo

	&__btn-try
		float right
		height 43px
		margin-top 5px
		line-height 43px
		display block
		padding-right 50px
		padding-left 50px
		border-radius 3px
		background #007728
		box-shadow 0 5px 0 0 #004807, 0 6px 5px 0 rgba(50,50,50,.6)
		font-family mbt-rb-b
		font-size 19px
		letter-spacing 0.1px
		text-transform uppercase
		cursor pointer
		color #fff
