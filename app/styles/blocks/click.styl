.multi-charts__click
.sharing__click
	display none
	position absolute
	left 50%
	width 120px
	height 120px
	border-radius 50%
	background rgba(25, 28, 37, 0.6)
	box-shadow 1px 0px 30px 0px rgba(229, 120, 28, 1)
	border 2px solid #E5781C
	cursor pointer
	animation animationFrames linear 3s
	animation-iteration-count infinite
	transform-origin 50% 50%
	@keyframes animationFrames
		0%
			opacity 0
		50%
			opacity 1
		100%
			opacity 0
	&:after
		content ''
		position absolute
		top 50%
		left 50%
		transform translateX(-50%) translateY(-50%)
		sprite $finger
