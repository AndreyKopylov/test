.footer
	z-index 10
	position absolute
	bottom 0
	height 114px
	width 100%
	background #000
	&-tabs
		position relative
		margin 34px auto
		max-width 1224px
		width 835px
		height 50px
		min-width 960px

		&:before
			content ''
			position relative
			display block
			top 50%
			transform translateY(-50%)
			height 2px
			width 100%
			background #5E5E5E


.tab
	position relative
	float left
	margin-right 64px
	width 50px
	height 50px
	border-radius 50%
	cursor pointer
	transition margin 1s ease
	will-change margin
	&:last-child
		margin-right 0
.tabs
	&-wrap
		position absolute
		left 50%
		transform translateX(-50%) translateY(-2px)
		height 50px
		border-radius 25px
		background #000
	&-outer
		margin-top -2px
		margin-left -2px
		overflow hidden
		display inline-block
		padding-left 0
		width 50px
		height 50px
		line-height 46px
		color #fff
		background #000
		border 2px solid #5e5e5e
		border-radius 25px
		transition padding 1s ease, width 1s ease
		will-change padding, width
	&-inner
		position absolute
		top -2px
		left -2px
		width 50px
		overflow hidden
		height 50px
		border-radius 25px
		max-width 200px
		color #FFF
		border 2px solid #fff
		background #373F4B
		&:before
			content ''
			position absolute
			top 50%
			left 50%
			transform translateX(-50%) translateY(-50%)
		&__multi-charts
			&:before
				sprite $multi-charts
		&__sharing
			&:before
				sprite $sharing


.js-multi-charts-active
	margin-right 128px
	.tabs-outer
		padding-left 65px
		width 174px
		transition padding 1s ease, width 1s ease
	.tabs-inner:before
		sprite $multi-charts-active
.js-sharing-active
	margin-right 128px
	margin-left 62px
	.tabs-outer
		padding-left 65px
		width 148px
		transition padding 1s ease, width 1s ease
	.tabs-inner:before
		sprite $sharing-active
