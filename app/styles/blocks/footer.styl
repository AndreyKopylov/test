.footer
	position absolute
	bottom 0
	height 114px
	width 100%
	background #000
	&-tabs
		position relative
		margin 34px auto
		max-width 1224px
		width 835px
		height 50px
		min-width 960px

		&:before
			content ''
			position relative
			display block
			top 50%
			transform translateY(-50%)
			height 2px
			width 100%
			background #5E5E5E
.tab
	float left
	margin-right 64px
	width 50px
	height 50px
	border-radius 50%
	border 2px solid #5E5E5E
	&:last-child
		margin-right 0
