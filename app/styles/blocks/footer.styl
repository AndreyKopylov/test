.footer
	z-index 10
	position absolute
	bottom 0
	height 114px
	width 100%
	background #000
	&-tabs
		position relative
		display inline-block
		margin 34px 0
		margin-left 65px
		width 844px
		height 50px

		&:before
			content ''
			position relative
			display block
			top 50%
			transform translateY(-50%)
			height 2px
			width 95%
			background #5E5E5E


.tab
	position relative
	float left
	margin-right 66px
	width 50px
	height 50px
	border-radius 50%
	cursor pointer
	transition margin 1s ease
	will-change margin
	&:last-child
		margin-right 0
.tabs
	&-wrap
		position absolute
		left 50%
		transform translateX(-50%) translateY(-2px)
		height 50px
		border-radius 25px
		background #000
	&-outer
		margin-top -2px
		margin-left -2px
		overflow hidden
		display inline-block
		padding-left 0
		width 50px
		height 50px
		line-height 46px
		color #fff
		background #000
		border 2px solid #5e5e5e
		border-radius 25px
		transition padding 1s ease, width 1s ease
		will-change padding, width
	&-inner
		position absolute
		top -2px
		left -2px
		width 50px
		overflow hidden
		height 50px
		border-radius 25px
		max-width 200px
		color #5e5e5e
		border 2px solid #5e5e5e
		background #000
		transition background 1s ease, border 1s ease
		&:before
			content ''
			position absolute
			top 50%
			left 50%
			transform translateX(-50%) translateY(-50%)
		&__multi-charts:before
			sprite $multi-charts
		&__sharing:before
			sprite $sharing
		&__deals:before
			sprite $deals
		&__signals:before
			sprite $online-signals
		&__news:before
			sprite $news
		&__friendly:before
			sprite $dark-interface
		&__indicators:before
			sprite $indicators

